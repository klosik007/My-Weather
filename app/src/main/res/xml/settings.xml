<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:key="chart_colors_category"
        app:title="@string/chart_colors">
        <ListPreference
            app:key="@string/sp_key_precipitation_chart_color"
            app:title="@string/precipitation_chart_color"
            app:defaultValue="#000000"
            app:entries="@array/chart_color_names"
            app:entryValues="@array/chart_color_values"
            app:summary="@string/precipitation_chat_color_summary"
            />
        <ListPreference
            app:key="@string/sp_key_temperature_chart_color"
            app:title="@string/temperature_chart_color"
            app:defaultValue="#3F48CC"
            app:entries="@array/chart_color_names"
            app:entryValues="@array/chart_color_values"
            app:summary="@string/temperature_chart_color_summary"
            />
    </PreferenceCategory>

    <PreferenceCategory
        app:key="chart_type_bar_category"
        app:title="@string/chart_type_precipitation">
        <ListPreference
            app:key="@string/sp_key_chart_type_precipitation"
            app:title="@string/precipitation_chart_type"
            app:defaultValue="HORIZONTAL_BEZIER"
            app:entries="@array/chart_type_precipitation_names"
            app:entryValues="@array/chart_type_precipitation_values" />

    </PreferenceCategory>
