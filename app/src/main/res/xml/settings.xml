    <PreferenceCategory
        app:key="language"
        app:title="@string/language">
        <ListPreference
            app:key="@string/sp_key_language"
            app:title="@string/select_language"
            app:defaultValue="ENGLISH"
            app:entries="@array/languages"
            app:entryValues="@array/languages_values"/>
    </PreferenceCategory>

    <PreferenceCategory
        app:key="cities_to_delete"
        app:title="@string/cities">
    </PreferenceCategory>
